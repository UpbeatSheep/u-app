<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:baselineAligned="true" android:layout_height="wrap_content">
        <Button android:background="@drawable/btn_campus_map" android:layout_weight="1" style="@style/Tile" android:id="@+id/btn_campus_map" android:layout_width="fill_parent" android:text="@string/btn_campus_map" android:layout_marginBottom="@dimen/tile_padding" android:layout_height="@dimen/tile_height"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout2" android:layout_height="wrap_content">
        <ImageButton android:layout_width="wrap_content" android:id="@+id/btn_uni" android:layout_weight="1" android:scaleType="centerInside" android:background="#ffffff" android:src="@drawable/btn_uni_logo" android:layout_marginRight="@dimen/tile_padding" android:layout_marginTop="@dimen/tile_padding" android:padding="6dip" android:layout_height="@dimen/tile_height"></ImageButton>
        <ImageButton android:layout_width="wrap_content" android:id="@+id/btn_upsu" android:layout_weight="1" android:background="#ffffff" android:scaleType="centerInside" android:src="@drawable/btn_upsu_logo" android:layout_marginLeft="@dimen/tile_padding" android:layout_marginTop="@dimen/tile_padding" android:padding="6dip" android:layout_height="@dimen/tile_height"></ImageButton>
       </LinearLayout>
    <ListView android:dividerHeight="0dip" android:id="@+id/android:list" android:layout_height="wrap_content" android:layout_width="match_parent" android:cacheColorHint="#00000000" android:layout_weight="1"></ListView>
</LinearLayout>